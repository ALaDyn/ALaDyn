#!/bin/bash

module purge

module load intel
module load intelmpi
module load boost
module load mkl
module load cmake

export INTELROOT=/cineca/prod/opt/compilers/intel/pe-xe-2017/binary
export CC=/cineca/prod/opt/compilers/intel/pe-xe-2017/binary/bin/icc
export CXX=/cineca/prod/opt/compilers/intel/pe-xe-2017/binary/bin/icpc
export FC=/cineca/prod/opt/compilers/intel/pe-xe-2017/binary/bin/ifort
export CLINKER=$CXX

mkdir -p build ; cd build
cmake .. -DINTELROOT=$INTELROOT -DCMAKE_LINKER=$CLINKER -DOTHER_INCLUDE_DIR=/cineca/prod/opt/compilers/intel/pe-xe-2017/binary/mkl/include/fftw/ -DBoost_NO_BOOST_CMAKE=ON -DCMAKE_Fortran_COMPILER=$FC
cmake --build . --target install
cd ..
